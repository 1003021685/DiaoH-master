<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arcgis.mymap.MainActivity">
        <com.esri.arcgisruntime.mapping.view.MapView
            android:id="@+id/mapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
           >
        </com.esri.arcgisruntime.mapping.view.MapView>

        <View
            android:visibility="gone"
            android:id="@+id/view1"
            android:background="#FF0033"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <View
            android:visibility="gone"
            android:id="@+id/view2"
            android:background="#FF0033"
            android:layout_centerInParent="true"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <com.arcgis.mymap.utils.ScaleView
            android:id="@+id/scale1"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.arcgis.mymap.utils.HscaleView
            android:id="@+id/scale2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_alignParentLeft="true"
            android:background="@color/color17"
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp">
                <ImageButton
                    android:id="@+id/menu"
                    android:layout_alignParentLeft="true"
                    android:background="@mipmap/novel_title_btnback"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
        </RelativeLayout>

        <RadioGroup
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <RadioButton
                    android:background="@drawable/radiobutton_backgroundclick"
                    android:textSize="14sp"
                    android:textColor="@color/color16"
                    android:button="@null"
                    android:gravity="center"
                    android:text="回退"
                    android:id="@+id/draw_back"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp" />
                <RadioButton
                    android:background="@drawable/radiobutton_backgroundclick"
                    android:textSize="14sp"
                    android:textColor="@color/color16"
                    android:button="@null"
                    android:gravity="center"
                    android:text="图层"
                    android:id="@+id/laymanager"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp" />
                <RadioButton
                    android:background="@drawable/radiobutton_backgroundclick"
                    android:textSize="14sp"
                    android:textColor="@color/color16"
                    android:button="@null"
                    android:gravity="center"
                    android:text="绘图"
                    android:id="@+id/drawing"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp" />
                <RadioButton
                    android:background="@drawable/radiobutton_backgroundclick"
                    android:textSize="14sp"
                    android:textColor="@color/color16"
                    android:button="@null"
                    android:gravity="center"
                    android:text="测量"
                    android:id="@+id/add"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp" />
                <RadioButton
                    android:background="@drawable/radiobutton_backgroundclick"
                    android:textSize="14sp"
                    android:textColor="@color/color16"
                    android:button="@null"
                    android:gravity="center"
                    android:text="数据"
                    android:id="@+id/save"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp" />
        </RadioGroup>

        <ImageButton
            android:id="@+id/measure"
            android:background="@drawable/imagebutton_background"
            android:src="@mipmap/main_edit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="170dp"
            android:layout_marginLeft="20dp"
            android:layout_width="34dp"
            android:layout_height="34dp" />
    <TextView
        android:text="线"
        android:id="@+id/xtx6"
        android:visibility="gone"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="220dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/imagebutton_background"
        android:layout_width="34dp"
        android:layout_height="34dp" />
    <TextView
        android:text="入"
        android:id="@+id/xtx5"
        android:visibility="gone"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="170dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/imagebutton_background"
        android:layout_width="34dp"
        android:layout_height="34dp" />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/showpoint"
            android:background="@drawable/imagebutton_background"
            android:src="@mipmap/a0o"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="20dp"
            android:layout_width="34dp"
            android:layout_height="34dp" />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/close"
            android:background="@drawable/imagebutton_background"
            android:src="@mipmap/tz"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="170dp"
            android:layout_marginLeft="20dp"
            android:layout_width="34dp"
            android:layout_height="34dp" />
        <ImageButton
            android:id="@+id/next"
            android:visibility="gone"
            android:background="@drawable/imagebutton_background"
            android:src="@mipmap/main_location0"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="20dp"
            android:layout_width="34dp"
            android:layout_height="34dp" />
        <ImageButton
            android:id="@+id/zoonIn"
            android:background="@drawable/imagebutton_background"
            android:src="@mipmap/main_zoomin"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"
            android:layout_marginRight="20dp"
            android:layout_width="34dp"
            android:layout_height="34dp" />
        <ImageButton
            android:id="@+id/zoonOut"
            android:background="@drawable/imagebutton_background"
            android:src="@mipmap/main_zoomout"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_marginRight="20dp"
            android:layout_width="34dp"
            android:layout_height="34dp" />
        <ImageButton
            android:id="@+id/clear"
            android:visibility="visible"
            android:background="@drawable/imagebutton_background"
            android:src="@mipmap/clear"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="20dp"
            android:layout_width="34dp"
            android:layout_height="34dp" />

        <ImageButton
            android:id="@+id/camera"
            android:visibility="gone"
            android:background="@drawable/imagebutton_background"
            android:src="@mipmap/camera"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            android:layout_width="34dp"
            android:layout_height="34dp" />
        <TextView
            android:visibility="gone"
            android:text="檐"
            android:id="@+id/fy"
            android:gravity="center"
            android:background="@drawable/imagebutton_background"
            android:layout_marginRight="55dp"
            android:layout_marginTop="90dp"
            android:layout_alignParentRight="true"
            android:layout_width="34dp"
            android:layout_height="34dp" />
        <TextView
            android:visibility="gone"
            android:text="0.1"
            android:gravity="center"
            android:background="@drawable/imagebutton_background"
            android:layout_marginRight="20dp"
            android:layout_marginTop="90dp"
            android:layout_alignParentRight="true"
            android:id="@+id/num_with_yan"
            android:layout_width="34dp"
            android:layout_height="34dp" />
        <ImageButton
            android:id="@+id/dw"
            android:background="@drawable/imagebutton_background"
            android:src="@mipmap/blb"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="20dp"
            android:layout_width="34dp"
            android:layout_height="34dp" />
        <ImageButton
            android:id="@+id/qx"
            android:visibility="gone"
            android:background="@drawable/imagebutton_background"
            android:src="@mipmap/qx"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="20dp"
            android:layout_width="34dp"
            android:layout_height="34dp" />
    <LinearLayout
        android:id="@+id/li1"
        android:visibility="gone"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="34dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="220v"
                android:id="@+id/xtx1"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:background="@drawable/imagebutton_background"
                android:layout_width="34dp"
                android:layout_height="34dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="10kv"
                android:id="@+id/xtx2"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:background="@drawable/imagebutton_background"
                android:layout_width="34dp"
                android:layout_height="34dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="35kv"
                android:id="@+id/xtx3"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:background="@drawable/imagebutton_background"
                android:layout_width="34dp"
                android:layout_height="34dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="通讯"
                android:id="@+id/xtx4"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:background="@drawable/imagebutton_background"
                android:layout_width="34dp"
                android:layout_height="34dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="单渠"
                android:id="@+id/xtx7"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:background="@drawable/imagebutton_background"
                android:layout_width="34dp"
                android:layout_height="34dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/li2"
        android:visibility="gone"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="34dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="混"
                android:id="@+id/dtx1"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:background="@drawable/imagebutton_background"
                android:layout_width="34dp"
                android:layout_height="34dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="1"
                android:id="@+id/dtx2"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:background="@drawable/imagebutton_background"
                android:layout_width="34dp"
                android:layout_height="34dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="2"
                android:id="@+id/dtx3"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:background="@drawable/imagebutton_background"
                android:layout_width="34dp"
                android:layout_height="34dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="3"
                android:id="@+id/dtx4"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:background="@drawable/imagebutton_background"
                android:layout_width="34dp"
                android:layout_height="34dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="4"
                android:id="@+id/dtx5"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:background="@drawable/imagebutton_background"
                android:layout_width="34dp"
                android:layout_height="34dp" />
        </RelativeLayout>
    </LinearLayout>
    <ListView
        android:visibility="gone"
        android:id="@+id/layoutlist"
        android:layout_above="@+id/radioGroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:layout_above="@+id/radioGroup2"
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="60dp">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
