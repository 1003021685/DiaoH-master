<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/li1"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_layout_item"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="5dp"
        android:maxLines="2"
        android:background="@color/color4"
        android:textColor="@color/color22"
        android:textSize="12sp"
        tools:text="layout"/>
    <ImageButton
        android:focusable="false"
        android:visibility="gone"
        android:background="@drawable/imagebutton_layer_add"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/addlayer"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <ImageButton
        android:focusable="false"
        android:visibility="gone"
        android:background="@drawable/imagebutton_layer_del"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/dellayer"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</RelativeLayout>
